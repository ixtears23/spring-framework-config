<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	
	<bean id="datasource.buzzy" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${mysql.buzzy.dirver}"/>
		<property name="url" value="${mysql.buzzy.url}"/>
		<property name="username" value="${mysql.buzzy.username}"/>
		<property name="password" value="${mysql.buzzy.password}"/>
	</bean>
	
<!--     <bean id="mysql.jndi" class="org.springframework.jndi.JndiObjectFactoryBean"> -->
<!--          <property name="jndiName" value="${jndi.mysql}" /> -->
<!--      </bean> -->
			
	<bean id="sqlSessionFactory.buzzy" class="org.mybatis.spring.SqlSessionFactoryBean">
	  <property name="dataSource" ref="datasource.buzzy" />
	  <property name="mapperLocations">
	  	<list>
	  		<value>classpath*:com/ibdata/project/**/UserMapper.xml</value>
	  	</list>
	  </property>
	</bean>
			
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" name="sqlSessionFactory" ref="sqlSessionFactory.buzzy"/>
	</bean>
	
</beans>
